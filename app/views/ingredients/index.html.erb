<h1>Ingredients</h1>

<%= link_to "Add a new ingredient", new_ingredient_path %>
<br>
<br>
<% @ingredients.each do |ingredient| %>
<div class="ingredientbox span4 offset1">
	<%= ingredient.name %> (<%= ingredient.amount %> <%= ingredient.unit %>)
	<%= link_to "Edit", edit_ingredient_path(ingredient) %>
	<%= link_to "Remove", ingredient_path(ingredient), :method => :delete, :confirm => "Are you sure?" %>
</div>
<% end %>